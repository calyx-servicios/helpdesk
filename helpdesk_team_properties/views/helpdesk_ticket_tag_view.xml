<odoo>
    <record id="view_helpdesk_ticket_tag_form" model="ir.ui.view">
        <field name="name">Add Team</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_tag_form"/>
        <field name="arch" type="xml">
            <field name="color" position="before">
                <field name="team_id"/>
            </field>
            
        </field>
    </record>

    <record id="view_helpdesk_ticket_tag_tree" model="ir.ui.view">
        <field name="name">Add Team</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_tag_tree"/>
        <field name="arch" type="xml">
            <field name="color" position="before">
                <field name="team_id"/>
            </field>
            
        </field>
    </record>
</odoo>